
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
@model IEnumerable<DTO_Category>
<h1>List category</h1>
<table class="table table-bordered table-striped">
    <tr>
        <th>Category name</th>
        <th></th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.CategoryName</td>
            <td><a class="btn btn-outline-primary" asp-action="Edit" asp-controller="Home" asp-route-id="@k.CategoryID">Edit</a></td>
        </tr>   
    }
</table>
<div>
    <a asp-controller="Home" asp-action="InsertCategory" class="btn btn-outline-primary">New category</a>
</div>
